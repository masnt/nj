<% if flash[:notice] %>
	<p class="flash"><%= flash[:notice] %>
</p>
<% end %>

<h1>Category List</h1>
<div class="grid-layout">
	<% @categories.each do |category| %>
		<div class="row">
			<%= link_to category_path(category), class: "category_#{category.id}" do %>
			    <div class="cate-box card">
				    <%= attachment_image_tag category, :category_image, :fill, 200, 200, class: "img-rounded cate-img card-img", fallback: "no_image.jpg",size:'200x200' %>
				    <div class="card-img-overlay">
					    <p class="cate-text"><%= category.category_title %></p>
					</div>
				</div>
			<% end %>
		</div>
	<% end %>
</div>

