<p id="notice"><%= notice %></p>

<div class="container">
   <div class="row">
 <h2 style="text-align: center;"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>会員情報</h2>

<div class="field row col-md-offset-4" style="margin-bottom: 5px;">
  <strong>氏名</strong>
  <%= @user.family_name %><%= @user.first_name %>
</div>
<div class="field row col-md-offset-4" style="margin-bottom: 5px;">
<strong>氏名(カナ)</strong>
　<%= @user.family_name_kana %><%= @user.first_name_kana %>
</div>
<div class="field row col-md-offset-4" style="margin-bottom: 5px;">
<strong>郵便番号</strong>
　<%= @user.postal_code %>
</div>
<div class="field row col-md-offset-4" style="margin-bottom: 5px;">
<strong>住所</strong>
　<%= @user.address %>
</div>
