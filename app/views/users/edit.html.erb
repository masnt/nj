<div class="container">
   <div class="row">
      <h2 style="text-align: center;"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> 会員情報編集</h2>

<%= form_for(@user) do |f| %>
<div class="field row col-md-offset-4" style="margin-bottom: 5px;">
    <label><%= f.label :姓 %><br />
           <%= f.text_field :family_name %>
    </label>
    <label><%= f.label :"名" %><br />
              <%= f.text_field :first_name %>
    </label>
</div>

<div class="field row col-md-offset-4" style="margin-bottom: 5px;">
          <label><%= f.label :"セイ" %><br />
              <%= f.text_field :family_name_kana %>
          </label>

          <label><%= f.label :"メイ" %><br />
              <%= f.text_field :first_name_kana %>
          </label>
</div>

<div class="field row col-md-offset-4" style="margin-bottom: 5px;">
          <%= f.label :"郵便番号 ※「-(ハイフン)」含む" %><br />
          <%= f.text_field :postal_code %>
      </div>

<div class="field row col-md-offset-4" style="margin-bottom: 5px;">
          <%= f.label :"住所" %><br />
          <%= f.text_area :address %>
</div>


<div class="field row col-md-offset-4" style="margin-bottom: 5px;">
          <%= f.label :"メールアドレス" %><br />
          <%= f.email_field :email %>
</div>


<div class="field row col-md-offset-4" style="margin-bottom: 5px;">
          <%= f.label :"電話番号 ※「-(ハイフン)」含む" %><br />
          <%= f.text_field :phone_number%>
</div>

<div class=class="actions" style="margin-bottom: 10px;">
    <%= f.submit "編集を保存する",class:"btn btn-primary col-xs-4 actions col-md-offset-4",style:"margin-bottom: 10px;"%>
</div>
</div>


<% end %>



