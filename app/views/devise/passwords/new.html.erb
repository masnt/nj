<div class="container">
<h2 style="text-align: center;">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field row col-md-offset-4"  style="margin-bottom: 5px;">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class:"col-xs-5", autocomplete: "email" %>
  </div>
  <div class="h-30" style="height: 20px;">
    </div>
  <div class="actions row col-md-offset-4"  style="margin-bottom: 5px;">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>
<div class="h-30" style="height: 20px;"></div>

<%= render "devise/shared/links" %>
</div>
<div class="h-30" style="height: 20px;"></div>