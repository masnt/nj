<div class="container">
  <h2 style="text-align: center;">NAGAJAKEへようこそ!!</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field row col-md-offset-4"  style="margin-bottom: 5px;">
      <%= f.label :'メールアドレス' %><br />
      <%= f.email_field :email, class:"col-xs-6", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field row col-md-offset-4"  style="margin-bottom: 5px;">
      <%= f.label :'パスワード' %><br />
      <%= f.password_field :password,  class:"col-xs-6",autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field col-md-offset-4 row"  style="margin-bottom: 10px;">
        <%= f.check_box :remember_me %>
        <%= f.label :'今後ログイン画面をパスする' %>
      </div>
    <% end %>

    <div class="action row"  style="margin-bottom:10px;">
        <%= f.submit "サインイン", class: "btn btn-primary col-md-offset-4 col-xs-4"%>
    </div>
  <% end %>

  <div class="row" style="text-align: center; margin-bottom: 10px;">
    <%= render "devise/shared/links" %>
  </div>
</div>
