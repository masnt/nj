

<h1>お届け先選択</h1>

<%= form_for @cart_history do |f| %>
<label><%= f.radio_button :shipping_type, :登録住所 %>登録住所へ送る</label><br>
  <strong>氏名</strong>
  <%= current_user.family_name %><%= current_user.first_name %><br>
  <strong>氏名(カナ)</strong>
　<%= current_user.family_name_kana %><%= current_user.first_name_kana %><br>
<strong>郵便番号</strong>
　<%= current_user.postal_code %><br>
<strong>住所</strong>
　<%= current_user.address %><br>
<strong>メールアドレス</strong>
　<%= current_user.email %><br>
<strong>電話番号</strong>
　<%= current_user.phone_number %><br>
<label><%= f.radio_button :shipping_type, :別のお届け先 %>別のお届け先に送る</label>
<% end %>
<%= render 'form', cart_history: @cart_history %>


