
<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :商品名 %>
    <%= form.text_field :product_name %>
  </div>

  <div class="field">
    <%= form.label :アーティスト %>
    <%= form.text_field :artist %>
  </div>



  <div class="field">
    <%= form.label :ジャケット写真　%>
    <%= form.attachment_field :jacket_image %>
  </div>

  <%if params[:action] == "edit" %>
    <%= attachment_image_tag @product, :jacket_image, :fill, 200, 200 %>
  <% end %>


  <div class="field">
    <%= form.label :詳細画像　%>
    <%= form.attachment_field :pictures_images, multiple: true %>

    <%if params[:action] == "edit" %>
　　   <% @product.pictures.each do |image| %>
    <%= attachment_image_tag image, :image, :fill, 100, 100 %>
    <% end %>
　<% end %>


  </div>

  <div class="field">
    <%= form.label :商品概要 %>
    <%= form.text_area :product_text %>
  </div>


　<div class="field">
    <%= form.label :カテゴリ %>
    <%= form.select :category_id, Product.category_ids.keys, :selected=>Product.category_ids[@product.category_id] %>
  </div>


  <div class="field">
    <%= form.label :レーベル %>
    <%= form.text_field :label %>
  </div>

<%if params[:action] == "edit" %>

<div class="field">
    <%= form.label :入荷数 %>
    <%= form.text_field :recieve_quantity%>
  </div>

<% end %>

<%if params[:action] == "new" %>

　<div class="field">
    <%= form.label :在庫数 %>
    <%= form.text_field :stock_quantity %>
  </div>

<% end %>

  <div class="field">
    <%= form.label :販売ステータス %>
     <%= form.select :product_status, Product.product_statuses.keys, :selected=>Product.product_statuses[@product.product_status] %>
  </div>

  <div class="field">
    <%= form.label :単価 %>
    <%= form.text_field :unit_price %>
  </div>

  <div class="actions">
    <%= form.submit "商品を登録する"%>
  </div>
<% end %>
