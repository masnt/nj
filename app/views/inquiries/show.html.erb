<div class="container">
	<p class="lead">お問い合わせ詳細</p>
	<div class="row">
		<div class="col-xs-offset-2 col-xs-2">問い合わせ日時</div>
	    <div class="col-xs-2">ユーザー名</div>
	    <div class="col-xs-2">タイトル</div>
	    <div class="col-xs-2">内容</div>
	</div>

	<div class="row">
		<div class="col-xs-offset-2 col-xs-2"><% time = @inquiry.created_at.in_time_zone('Tokyo') %><%= time.strftime('%Y年%m月%d日 %H:%M:%S') %></div>
	    <div class="col-xs-2"><%= @user.family_name %>
	    	                  <%= @user.first_name %><br>
	    	                  (<%= @user.family_name_kana %>
	    	                  <%= @user.first_name_kana %>)
	    	                  </div>
	    <div class="col-xs-2"><%= @inquiry.inquiry_title %></div>
	    <div class="col-xs-4"><%= simple_format(@inquiry.inquiry_text) %></div>
	</div>

	<div class="row">
	    <div class="col-xs-offset-4 col-xs-4">
	    	ユーザー名
	    	<%= @user.family_name %>
	    	<%= @user.first_name %>
	    	(mail:<%= @user.email %>)さんへ返信する
	    </div>
	</div>
	<div class="row">
	    <div class="col-xs-offset-5 col-xs-4">管理者返信内容</div>
	</div>
	<div class="row">
		<%= form_for @reply do |f| %>
			<% if @reply.errors.any? %>
				<%= @reply.errors.count %>
				<%= @reply.errors.full_messages.each do |message| %>
					<%= message %>
			    <% end %>
		    <% end %>

		    <%= f.text_area :inquiry_text, placeholder:'返信内容をご入力ください。', class: "col-xs-offset-4 col-xs-4" %>
		    <div class="row">
			    <%= f.submit '送信ボタン', class: "col-xs-offset-4 col-xs-4 btn btn-success stop" %>
		    </div>
	    <% end %>
    </div>
	<div><%= link_to 'Back to index', :controller => "inquiries", :action => "index", class: "col-xs-4 col-xs-4 btn btn-success active" %></div>
</div>
