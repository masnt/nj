<div class="container">
<div class="row">
	<p>Preview </p>

	<%= form_for @inquiry do |f| %>
	<%#= @inquiry.inquiry_title %>
		<div><%#= f.inquiry_title %></div><%# ←保存した値しか呼び出せないようです %>
	    <div><%#= f.inquiry_text %></div>
	    <div class="row">
		    <div class="col-xs-offset-2 col-xs-8"><%= @inquiry.inquiry_title %></div>
	    </div>
	    <div class="row">
		    <div class="col-xs-offset-2 col-xs-8"><%= @inquiry.inquiry_text %></div>
		</div>
	    <div><%= f.hidden_field :inquiry_title %></div>
	    <div><%= f.hidden_field :inquiry_text %></div>
	    <div><%#= @time.date_select :inquiry_datetime %></div>
	    <div class="row">
		    <%= f.submit '送信する', class: "col-xs-offset-2 col-xs-8 btn btn-primary active", data: { disable_with: '送信中 now sending'} %>
		</div>
		    <%#= link_to "Back", new_inquiry_path(@inquiry), class: "col-xs-8 btn back", class: "back" %>
			<%#= f.submit "入力画面に戻る", name: "Editing", new_inquiry_path, method: :post, class: "col-xs-8 btn back" %>
	<% end %>
	<%= form_for @inquiry do |f| %>
	    <div><%= f.hidden_field :inquiry_title %></div>
	    <div class="row"><%= f.hidden_field :inquiry_text %></div>
		<%= f.submit "入力画面に戻る", name: "back", class: "col-xs-offset-2 col-xs-8 btn back" %>
	<% end %>
</div>
